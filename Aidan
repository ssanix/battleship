;The code below works
(part "A reactive grid of pegs")
;;; The code below is using the 'reactive library' for more information check the
;;; 'Interactivity, Events, and Reactivity' reading.



;initial model struct
(struct state (peg x y griddy))


(define grid-maker
  (lambda (st canvass i k j vec)
  (if (equal? k 500)
    null
    (begin (canvas-drawing! canvass i k (vector-ref vec j))
      (if (< i 450)
        (grid-maker st canvass (+ i 50) k (+ j 1) vec)
        (grid-maker st canvass 0 (+ k 50) (+ j 1) vec))))))

;(canvas-drawing! canvass x y red-peg)


; ; view function
(define view
  (lambda (st canvass)
    (match st
      [(state peg x y griddy)
        (begin
          (ignore
            (begin 
          ;;; This is purposefully low-level for testing
             (grid-maker st canvass 0 0 0 (grid-vec (make-vector 100 0) 0 griddy)))))])))






    
          ; (cond 
          ;   [(equal? (state-peg st) white-peg)
          ;     (canvas-drawing! canvass x y red-peg)]
        
          ;   [(equal? (state-peg st) red-peg)
          ;     (canvas-drawing! canvass x y white-peg)]
          ;   [else "what's going on?"]))])))


      
;the update function  
(define update
  (lambda (msg st)
    (match st
      [(state peg x y griddy)
        (match msg
          [(event-mouse-click btn cx cy)
            (let* ([a (vector-set! griddy (truncate (/ (+ (* cy 10) cx) 50)) 1)])
              (state peg x y griddy))])])))



    
            ; (if (equal? (state-peg st) white-peg)
            ;     (state red-peg (truncate(- cx 10)) (truncate(- cy 10)) griddy)
            ;     (state white-peg (truncate(- cx 10)) (truncate(- cy 10)) griddy))])])))
                      
             

(display
  (reactive-canvas
    500 500
    ;initial model
      (state (circle 10 "solid" "black") 15 15 grid0)
    ;view function
      view
    ;update fucntion
      update; eventualy this will need to update the grid function.
    ;subscriptions
    (on-mouse-click)))





(problem "Click anywhere on the canvas to place the peg. 
  \n Tip: You have to click exactly in the middle of the 
          black circle to place the red/white peg accurately.
  \n Tip: The fist click makes a red peg, click a second time to place a white peg on the grid")
